<body class="posts">
<!-- Top header Links Starts Here -->
<%=render :partial=>'/layouts/header_top'%>
<%= render :partial=>'/projects/alert_message' %>
<!-- Top header Links Ends Here -->
<div class="container" style="overflow: visible;">
	<div class="width-wrapper">
		<div id="posts" class="left-col main-content">
			<!--Header Navigation Tabs -->
			<%= render :partial => '/layouts/header_nav_tabs' %>
			<div class="box-top-left"></div>
			<div class="box-top"></div>
			<div class="box-top-right"></div>
			<div class="main-padder" style="overflow:visible;">
				<div class="dash-box">
					<h2 class="header-bar">Project Settings</h2>
				</div>
				<div id="post-1" class="setting">
					<div class="post-body">
					<%remote_form_for @project, :url=>{:controller=>"projects/dashboard", :action=>"change_project_settings", :id=>@project.id} do |f|%>
				     <p>The project name is displayed in the top navigation bar, and from the switch dashboard menu.</p>
				     <label class="namelabel">Project Name</label>
	        	<div class="input-wrapper text-wrapper ">
							<div class="box-top-left"></div>
							<div class="box-top"></div>
							<div class="box-top-right"></div>
							<div class="box-body">
								<input type="text" value="<%= @project.name %>"  name="project_name"/>
							</div>
							<div class="box-bottom-left"></div>
							<div class="box-bottom"></div>
						<div class="box-bottom-right"></div>
					</div>
          <label class="statuslabel">Project Status</label>
          <select class="status" name="status">
					<% if @project.is_completed==true %>
						<option value="inprogress">In Progress</option> 
						<option value="pending" selected="selected">Completed</option>
					<% else %>
					<option value="inprogress" selected="selected">In Progress</option> 
						<option value="pending">Completed</option>
					<% end %>
					</select>
          <div class="group submit-col">
   					<input type="button" class="btn cancel-btn" value="Cancel" onclick="javascript:to_project_dashboard()"/> 
						<input type="submit" class="btn save-btn" value="Save" />
 					</div>
 					<div class="clear"></div>
					<% end %>
				</div>
				</div>
			</div> <!-- end main-padder -->
			<div class="box-bottom-left"></div>
			<div class="box-bottom"></div>
			<div class="box-bottom-right"></div>
		</div>
	</div>
	<div id="sidebar" class="right-col">
   <a href="<%=new_project_post_path(@project.url,@project)%>" class="btn create-new-post-btn ir"><span>Create a new post</span></a>	   
		<div class="sidebar-box">
	<div id="online_user">
		<%= render :partial=>'projects/dashboard/online_users' %>
	</div>
		</div>
		<%= render :partial=>'projects/dashboard/project_files' %>
		<!--<h4>Recent Files</h4>
		<ul class="file-list">
			<li class="file-pdf"><a href="#">Project-outline.pdf</a></li>
			<li class="file-doc"><a href="#">Notes-for-marketing.doc</a></li>
			<li class="file-psd"><a href="#">Iconography.psd</a></li>
			<li class="file-fla"><a href="#">Tour.fla</a></li>
			<li class="file-zip"><a href="#">Photos.zip</a></li>
			<li class="no-icon"><a href="#" class="more-link">14 more</a></li>
		</ul>-->
	</div>
</div>
<%= render :partial=>'/layouts/base_footer'%>
