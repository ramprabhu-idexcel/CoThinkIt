<body class="posts">


<%=render :partial=>'/layouts/header_top'%>

<div class="container">
	<div class="width-wrapper">
		<div id="create-post" class="left-col main-content">
						<%= render :partial => '/layouts/header_nav_tabs' %>
            <%= render :partial => '/projects/alert_message' %>
			<div class="box-top-left"></div>
			<div class="box-top"></div>
			<div class="box-top-right"></div>
			<div class="main-padder">
			<% form_tag(project_update_comment_path(@project.url,@project,@post,@comment) ,:multipart => true, :target => 'upload_frame',:id=>"upload") do %>		
				<div class="dash-box">
					<h2 class="header-bar" style="width:620px;">Editing comment on "<%= truncate(@post.title,50) %>"</h2>
					<div class="padder dark-bg" style="overflow:auto;">
						<div id="create-post-form" style="height:180px;">
							<div class="group">

								</div>
									<div class="tinyMCE-textarea">
							<%=text_area_tag 'comment[comment]', @comment.comment, :rows => 3, :cols => 50 %>
						</div>
						
										<div class="submit-actions">
										
							<label><% if @comment.status.nil? %><%=check_box_tag 'comment[status_flag]' %><% else %><%=check_box_tag 'comment[status_flag]', ' ', true %><% end %>Allow status flags</label>
						<a class="upload-files" href="#file_upload" onclick="$('file_upload').show(); return false;">Upload Files</a>								
               <%=render :partial=>"/projects/comment_progress_bar"%>
									
							<input type="submit" class="btn update-post-btn" value="Update Post"  style="float:right;" onclick="return comment_progress_bar('<%=project_update_comment_path(@project.url,@project,@post,@comment)%>');"/>
						</div>
				
						<ul id="extra-actions" style="margin-top:25px;">
						<li class="modal-trigger">
						<div id="existing_files" style="margin-left: -87px;">
																<%= render :partial=>'comment_existing_files' %>
</div>
						<div id="file_upload"  style="display:none;margin-left: -87px;">
	
			
							<div id="files_list"></div>
									<%=file_field_tag 'file_1', :id=>"my_file_element"%>
									<script>
												var multi_selector = new MultiSelector( document.getElementById( 'files_list' ), 10 );
												multi_selector.addElement( document.getElementById( 'my_file_element' ) );
									</script>
							</div>
						</li>
						</ul>
					</div>
					</div>
				</div>
				
				<% end %>
				<iframe id='upload_frame' name="upload_frame" style="width:0px;height:0px;border:0px" src="about:blank"></iframe>
			</div> <!-- end main-padder -->
			<div class="box-bottom-left"></div>
			<div class="box-bottom"></div>
			<div class="box-bottom-right"></div>
		</div>
	</div>
	<div id="sidebar" class="right-col">
		<div id="online_user"><%= render :partial=>'projects/dashboard/online_users' %></div>
	</div>
</div>
