<body class="tasks">

<!-- Top header Links Starts Here -->
<%=render :partial=>'/layouts/header_top'%>
<!-- Top header Links Ends Here -->

<div class="container" style="overflow: visible;">
	<div class="width-wrapper">
		<div id="tasks" class="left-col main-content">
			<!--Header Navigation Tabs -->
			<%= render :partial => '/layouts/header_nav_tabs' %>
			<div class="box-top-left"></div>
			<div class="box-top"></div>
			<div class="box-top-right"></div>
			<div class="main-padder" style="overflow:visible;" >
       <%if @tasks.empty?%>
        <%=render :partial=>"zero_tasks"%>
        <%else%>
				<div class="dash-box">
					<h2 class="header-bar">Tasks</h2>
					<div class="header-tools">
						<div id="posts-filter" class="filter dropmenu"><%=link_to_remote "View All",{:url =>task_filter_project_tasks_path(@project.url,@project,:filter_option => "View All"),:method=>:get},:class => "menu-trigger btn ir"%><!--<a href="#" class="menu-trigger btn ir"><span>View All</span></a>--> <p>Filter</p>
							<ul>
								<li><%=link_to_remote "Due Today",:url =>task_filter_project_tasks_path(@project.url,@project,:filter_option => "Due Today"),:method=>:get%></li>
								<li><%=link_to_remote "Assigned to me",:url =>task_filter_project_tasks_path(@project.url,@project,:filter_option => "Assigned to me"),:method=>:get%></li>

								<li><%=link_to_remote "Unassigned",:url =>task_filter_project_tasks_path(@project.url,@project,:filter_option => "Unassigned"),:method=>:get%></li>
								<li><%=link_to_remote "Not started",:url =>task_filter_project_tasks_path(@project.url,@project,:filter_option => "Not started"),:method=>:get%></li>
								<li><%=link_to_remote "In progress",:url =>task_filter_project_tasks_path(@project.url,@project,:filter_option => "In progress"),:method=>:get%></li>
								<li><%=link_to_remote "Late",:url =>task_filter_project_tasks_path(@project.url,@project,:filter_option => "Late"),:method=>:get%></li>
							</ul>
						</div>

							<%=link_to_remote("Reorder Task Lists",{:url =>change_reorder_page_project_tasks_path(@project.url,@project,:reorder=>1),:method => :get} ,{:id => "reorder-tasks"})%>
					</div>
		<div id="task_list">
			<%=render :partial => "tasks_list"%>	
		</div>
	</div>
  <%end%>
			</div> <!-- end main-padder -->
			<div class="box-bottom-left"></div>
			<div class="box-bottom"></div>
			<div class="box-bottom-right"></div>
		</div>
	</div>
	<%= render :partial=>'task_right_bar'%>

</div>


