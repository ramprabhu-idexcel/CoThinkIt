<body class="dialog signup">
<font color="green" > <%=flash[:notice]%></font>
<div id="bg-top"></div>
	<div id="top">
		<div id="starburst"></div>
			<h2 id="logo" class="ir"><a href="/"><span>CoThink.it</span></a></h2>
			<p id="login-blurb">Already have an account? <a href="/login" title="Log in">Log in.</a></p>
		</div>
		<div class="content-wrap">
			<div class="box-wrap">
				<div class="box">
					<h1>Start your Free Trial</h1>
					<p><em>Everything is fully functional. No credit card is required</em></p>
					
					<%form_remote_tag :url=>{ :controller => "users", :action => "create" } do %>

					<fieldset class="share-line">
						<label>First Name</label>
						<div class="input-wrapper text-wrapper ">
							<div class="box-top-left"></div>
							<div class="box-top"></div>
							<div class="box-top-right"></div>
							<div class="box-body"><% if session[:first_name] && !session[:first_name].nil? %>
							<%=text_field :user, 'first_name',:value=>"#{session[:first_name]}" %> <% else %> <%=text_field :user, 'first_name' %><% end %></div>
							<div class="box-bottom-left"></div>
							<div class="box-bottom"></div>
							<div class="box-bottom-right"></div>
						</div>
					
						<label>Last Name</label>
						<div class="input-wrapper text-wrapper ">
							<div class="box-top-left"></div>
							<div class="box-top"></div>
							<div class="box-top-right"></div>
							<div class="box-body"><% if session[:last_name] && !session[:last_name].nil? %><%= text_field :user,'last_name' ,:value=>"#{session[:last_name]}" %> <% else %> <%=text_field :user, 'last_name' %><% end %></div>
							<div class="box-bottom-left"></div>
							<div class="box-bottom"></div>
							<div class="box-bottom-right"></div>
						</div>
						
						<label>Organization <%=link_to "(?)","#",:title=>"Your organization is your company, department, school, team, or group name. It helps others identify you. You can edit it at any time."%></label>
						<div class="input-wrapper text-wrapper ">
							<div class="box-top-left"></div>
							<div class="box-top"></div>
							<div class="box-top-right"></div>
							<div class="box-body"><%= text_field :user, 'company' %></div>
							<div class="box-bottom-left"></div>
							<div class="box-bottom"></div>
							<div class="box-bottom-right"></div>
						</div>
						
						<label>Email</label>
						<div class="input-wrapper text-wrapper ">
							<div class="box-top-left"></div>
							<div class="box-top"></div>
							<div class="box-top-right"></div>
							<div class="box-body"><% if session[:email] && !session[:email].nil? %><%= text_field :user,'email' ,:value=>"#{session[:email]}" %> <% else %> <%=text_field :user, 'email' %><% end %></div>
							<div class="box-bottom-left"></div>
							<div class="box-bottom"></div>
							<div class="box-bottom-right"></div>
						</div>
					
						<label>Password</label>
						<div class="input-wrapper text-wrapper ">
							<div class="box-top-left"></div>
							<div class="box-top"></div>	
							<div class="box-top-right"></div>
							<div class="box-body">
							<%= password_field :user, 'password' %>
							<% hidden_field :user, 'password_confirmation' %>
							</div>
							<div class="box-bottom-left"></div>
							<div class="box-bottom"></div>
							<div class="box-bottom-right"></div>
						</div>
						
						<label>Domain <%=link_to "(?)","#",:title=>"Your site address is the subdomain where all the projects you create are stored. Projects other users create are stored on their own site addresses. Only projects you create count toward your storage and transfer limits."%></label>
						<div class="input-wrapper text-wrapper site-address">
							<div class="box-top-left"></div>
							<div class="box-top"></div>
							<div class="box-top-right"></div>
							<div class="box-body"><%= text_field :user, 'site_address' %></div>
							<div class="box-bottom-left"></div>
							<div class="box-bottom"></div>
							<div class="box-bottom-right"></div>
						</div>
						<span class="desc f-rgt">.cothinkit.com</span>
						<p class="fine-print">By clicking <em>'Create my account,'</em> you agree to the <a href="/terms" target="new">Terms of Use</a> and <a href="/privacy" target="new">Privacy Policy</a>.</p>
						<input type="submit" class="btn-47 create-account-btn" value="Create My Account" />
					</fieldset>
				<% end -%>
				<% session[:first_name]=nil %>
				<% session[:last_name]=nil %>
			</div>
		</div>
	</div>
</body>
  <script>
    $('user_first_name').focus()
  </script>